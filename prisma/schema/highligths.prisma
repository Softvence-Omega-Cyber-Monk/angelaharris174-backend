model highlights {
  id            String    @id @default(uuid())
  mergedVideoUrl String?
  caption        String   
  description   String
  userId         String    // Renamed from "user id" to follow Prisma relation conventions
  clips          Json           // e.g., [{ key: 'clip1.mp4', s3Key: 'temp/clip1.mp4', order: 0 }]
  isProcessing   Boolean   @default(false)
  updatedAt      DateTime  @updatedAt

  user           User      @relation(fields: [userId], references: [id])
}